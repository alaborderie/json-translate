extends layout

block content

    header.masthead
        div.container.h-100
            div.row.h-100.align-items-center.justify-content-center.text-center
                div.col-lg-10.align-self-end
                    h1.text-uppercase.text-white.font-weight-bold Translate your JSON files to any language
                    hr.divider.my-4
                div.col-lg-8.align-self-baseline
                    p.text-white-75.font-weight-light.mb-5 Need to translate your App or Website to different languages like French or Italian ? It would take forever to manually translate your 1000 lines JSON file... Don't lose more time and try JSON Translate now !
                    a.btn.btn-primary.btn-xl.js-scroll-trigger(href='#about') Find Out More

    section.page-section.bg-primary#about
        div.container
            div.row.justify-content-center
                div.col-lg-8.text-center
                    h2.text-white.mt-0 Here's just what you need!
                    hr.divider.light.my-4
                    p.text-white-50.mb-4 Use translate-json the way you want! Get the result as a JSON response through our REST API or as JSON files directly through this Website!
                    a.btn.btn-light.btn-xl.js-scroll-trigger(href='/translate') Translate now!
                    span.ml-4.mr-4.text-white OR
                    a.btn.btn-light.btn-xl.js-scroll-trigger(href='/docs') Get to API Docs!

    section.page-section#contact
        div.container
            div.row.justify-content-center
                div.col-lg-8.text-center
                    h2.mt-0 Let's get in touch!
                    hr.divider.my-4
                    p.text-muted.mb-5 Need a Fullstack Web Developer? Contact me below!
            div.row
                div.col-lg-3.ml-auto.text-center
                    a(href='https://github.com/alaborderie')
                        i.fab.fa-github.fa-3x.mb-3.text-muted
                        div GitHub
                div.col-lg-3.ml-auto.mr-auto.text-center
                    a(href='https://www.linkedin.com/in/antoine-laborderie-866090130/')
                        i.fab.fa-linkedin.fa-3x.mb-3.text-muted
                        div LinkedIn
                div.col-lg-3.mr-auto.text-center
                    a.d-block(href='mailto:antoine.laborderie@gmail.com')
                        i.fas.fa-envelope.fa-3x.mb-3.text-muted
                        div antoine.laborderie@gmail.com
